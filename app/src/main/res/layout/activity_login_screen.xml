<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- App Icon -->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_home_lock"
            android:contentDescription="@string/text_image_desc"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_login_subheading"
            android:textSize="16sp"
            android:textColor="@color/text_sub_grey_600"
            android:layout_marginBottom="24dp" />

        <!-- Card Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gpt_bg_property_card"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="24dp"
            android:elevation="6dp"
            android:layout_marginHorizontal="12dp">


            <!-- Phone Number -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_login_input"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_cc_in"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/text_phone"
                    android:inputType="phone"
                    android:autofillHints="phone"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_sub_grey_600"
                    android:background="@android:color/transparent" />
            </LinearLayout>

            <!-- Otp Code -->
            <EditText
                android:id="@+id/etOtpCode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/text_otp_code"
                android:drawableStart="@drawable/ic_otpkey"
                android:drawableTint="@color/text_sub_grey_600"
                android:drawablePadding="10dp"
                android:background="@drawable/bg_login_input"
                android:padding="10dp"
                android:visibility="gone"
                android:textColor="@color/text_black"
                android:textColorHint="@color/text_sub_grey_600"
                android:layout_marginBottom="12dp" />

            <!-- OTP Button with Circular Loader -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginBottom="16dp">

                <!-- Material OTP Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRequestOtp"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/text_req_otp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    app:cornerRadius="10dp"
                    app:backgroundTint="@color/teal_700" />

                <!-- Circular Loader (hidden by default) -->
                <ProgressBar
                    android:id="@+id/progressOtpLogin"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:indeterminateTint="@color/white"
                    android:elevation="2dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>



            <!-- Divider with OR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/text_sub_grey_600" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_or"
                    android:layout_marginHorizontal="8dp"
                    android:textColor="@color/text_sub_grey_600" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/text_sub_grey_600" />
            </LinearLayout>

            <!-- Google Sign-in -->
            <LinearLayout
                android:id="@+id/google_sign_in_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:elevation="3dp"
                android:layout_margin="4dp"
                android:background="@drawable/bg_login_google_signin"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/text_image_desc"
                    android:src="@drawable/ic_google_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_sign_in_google"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>


        </LinearLayout>

        <!-- Terms -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_login_terms1"
                android:textSize="12sp"
                android:layout_marginEnd="3dp"
                android:textColor="@color/text_sub_grey_600" />

            <TextView
                android:id="@+id/tvTermsLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_login_terms2"
                android:textSize="12sp"
                android:textColor="@color/text_link_blue"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginHorizontal="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_login_terms3"
                android:textSize="12sp"
                android:layout_marginEnd="3dp"
                android:textColor="@color/text_sub_grey_600" />

            <TextView
                android:id="@+id/tvPrivacyLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_login_terms4"
                android:textSize="12sp"
                android:textColor="@color/text_link_blue"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>
