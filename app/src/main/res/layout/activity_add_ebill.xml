<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAddPropertySubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Electricity Bill Details"
            android:textColor="@color/text_black"
            android:textSize="15sp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="30dp"
            android:background="@drawable/bg_add_prop_form"
            android:elevation="4dp"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Electricity Bill Entry Mode *"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Payment Mode Selector -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleElcBillMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true"
                android:layout_marginBottom="16dp"
                app:checkedButton="@+id/btnByUnitsSelection">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnByUnitsSelection"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Units"
                    android:textAllCaps="false"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnByAmountSelection"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Amount"
                    android:textAllCaps="false"/>

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <LinearLayout
                android:id="@+id/layoutElcUnitPaid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Enter Units Paid Up To -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="Update Electricity Units *"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_login_input">

                    <ImageView
                        android:id="@+id/icon_meter_reading"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/ic_meter_reading"
                        app:tint="@color/text_sub_grey_600" />

                    <EditText
                        android:id="@+id/etCurrentMeterReading"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/icon_meter_reading"
                        android:background="@drawable/bg_login_input"
                        android:hint="Enter Current Meter Reading"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_sub_grey_600" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutElcBillAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Property Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="Electricity Bill Paid *"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_login_input">

                    <ImageView
                        android:id="@+id/icon_ebill_amount"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/ic_rupee_symbol"
                        app:tint="@color/text_sub_grey_600" />

                    <EditText
                        android:id="@+id/etElcBillAmount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/icon_ebill_amount"
                        android:background="@drawable/bg_login_input"
                        android:hint="Enter Bill Amount"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey_500" />
                </RelativeLayout>

            </LinearLayout>


            <!-- Property Name -->
            <LinearLayout
                android:id="@+id/layoutLastPaidTill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="Last Units Paid Upto *"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_login_input">

                    <ImageView
                        android:id="@+id/icon_last_paid"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/ic_meter_reading"
                        app:tint="@color/text_sub_grey_600" />

                    <EditText
                        android:id="@+id/etElcLastPaidUnit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/icon_last_paid"
                        android:background="@drawable/bg_login_input"
                        android:hint="Enter Previous Paid Till Units"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey_500" />
                </RelativeLayout>
            </LinearLayout>



            <!-- Address/City -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Payment Mode *"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Payment Mode Selector -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/togglePaymentMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true"
                android:layout_marginBottom="16dp"
                app:checkedButton="@+id/btnCashSelection">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCashSelection"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash"
                    android:textAllCaps="false"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOnlineSelection"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online"
                    android:textAllCaps="false"/>

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- Address/City -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Date &amp; Time Of Payment *"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


            <RadioGroup
                android:id="@+id/rgCurrentCustomDT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbCurrentDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Date &amp; Time"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rbCustomDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custom"
                    android:layout_marginStart="20dp" />

            </RadioGroup>


            <LinearLayout
                android:id="@+id/layoutDateTimePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16sp"
                android:paddingVertical="8dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_item_chip_layout"
                android:gravity="center_vertical">

                <!-- Date Section -->
                <LinearLayout
                    android:id="@+id/layoutDatePicker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar_start_date2"
                        app:tint="@color/teal_700"
                        android:contentDescription="@string/text_image_desc" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textSize="12sp"
                            android:textColor="@color/text_sub_grey_600" />

                        <TextView
                            android:id="@+id/tvCustomDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 Aug 2024"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/text_black" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="#E0E0E0" />

                <!-- Time Section -->
                <LinearLayout
                    android:id="@+id/layoutTimePicker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_clock"
                        app:tint="@color/teal_700"
                        android:contentDescription="@string/text_image_desc" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:textSize="12sp"
                            android:textColor="@color/text_sub_grey_600" />

                        <TextView
                            android:id="@+id/tvCustomTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00 AM"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/text_black" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/tvCurrDateTimeHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Date &amp; Time Applied."
                android:layout_marginBottom="4dp"
                android:layout_marginTop="25dp"/>

            <!-- Material OTP Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveElcBill"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Add E-bill Record"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingVertical="14dp"
                android:textColor="@android:color/white"
                app:cornerRadius="10dp"
                app:backgroundTint="@color/teal_700" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>
