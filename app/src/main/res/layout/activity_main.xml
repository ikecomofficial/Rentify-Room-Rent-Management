<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".MainActivity">


    <!-- Header Container -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        tools:ignore="MissingConstraints">

        <!-- Left side: Welcome + Title -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_welcome"
                android:textColor="@color/text_sub_grey_600"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_name"
                android:textColor="@color/text_black"
                android:textSize="28sp"
                android:textStyle="bold"
                 />
        </LinearLayout>

        <!-- Notification Icon -->
        <ImageView
            android:id="@+id/iv_notification"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_bell"
            android:layout_marginEnd="16dp"
            app:tint="#757575" />

        <!-- Circle Image View (Profile Pic) -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cimgUserAccount"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_user2"
            app:civ_border_width="0dp"
            app:civ_border_color="@android:color/transparent" />


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/occupancyCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        android:backgroundTint="@color/bg_occupancy_layout"
        app:layout_constraintTop_toBottomOf="@+id/headerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:weightSum="10"
            android:gravity="center_vertical">

            <!-- Left Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_total_occupancy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_occupancy"
                    android:textSize="15sp"
                    android:textColor="@color/teal_700"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvProgressLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_some_percentage"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_black"
                    android:layout_marginTop="4dp" />

                <ProgressBar
                    android:id="@+id/occupancyProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="6dp"
                    android:progress="0"
                    android:progressTint="@color/teal_200"
                    android:progressBackgroundTint="#E0E0E0"
                    android:indeterminate="false" />
            </LinearLayout>

            <!-- Right Section -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="4"
                android:gravity="end">

                <TextView
                    android:id="@+id/tvCurrentMY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jul 2025"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/text_sub_grey_600"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvMonthlyAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Amount"
                        android:textSize="16sp"
                        android:textColor="@color/text_black"/>

                    <ImageView
                        android:id="@+id/imgViewEye"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginVertical="4dp"
                        android:src="@drawable/ic_eye_close"/>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layoutPropertyHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/occupancyCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Left Title -->
        <TextView
            android:id="@+id/tvPropertiesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_properties"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Add Property Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddProperty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_plus_add_property"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:paddingHorizontal="16dp"
        android:iconTint="@color/white"
        android:textColor="@color/white"
        app:cornerRadius="25dp"
        app:backgroundTint="@color/teal_700"/>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/propertyListRecycleView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutPropertyHeader"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/progressBarProperties"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/occupancyCard"/>

    <!-- Optional: Show when no properties exist -->
    <TextView
        android:id="@+id/tvNoPropertyList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/text_no_prop_found"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutPropertyHeader"/>


</androidx.constraintlayout.widget.ConstraintLayout>