<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:elevation="2dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/gpt_bg_property_card"
    android:gravity="center_vertical">

    <!-- Left Icon Circle -->
    <FrameLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/gpt_bg_circle"
        android:gravity="center">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_rent1"
            app:tint="@color/teal_700"
            android:layout_gravity="center"/>
    </FrameLayout>

    <!-- Middle Texts -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/tvRentAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ â‚¹5,635"
            android:textColor="#48ad50"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRentDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03 Oct 2025, 05:31 PM"
            android:textColor="#808080"
            android:textSize="15sp" />
    </LinearLayout>

    <!-- Right Side -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/tvRentPaymentMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash"
            android:paddingHorizontal="12dp"
            android:paddingVertical="3dp"
            android:background="@drawable/gpt_bg_chip"
            android:textSize="13sp"
            android:textColor="@color/grey_700"/>

        <TextView
            android:id="@+id/tvRentTenantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By: Raj"
            android:textColor="#808080"
            android:textSize="13sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

</LinearLayout>
