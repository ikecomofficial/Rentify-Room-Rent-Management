<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Property"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAddPropertySubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fill the details to add a property"
                android:textColor="?attr/colorOnBackground"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="30dp"
            android:background="@drawable/bg_add_prop_form"
            android:elevation="4dp"
            android:layout_marginHorizontal="10dp">

            <!-- Property Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="@string/text_property_name_asterisk"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/gpt_edittext_bg">

                <ImageView
                    android:id="@+id/icon_property"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_home"
                    app:tint="@color/icon_grey" />

                <EditText
                    android:id="@+id/editTextPropertyName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/icon_property"
                    android:background="@drawable/gpt_edittext_bg"
                    android:hint="Enter property name"
                    android:inputType="textCapWords"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_500" />
            </RelativeLayout>


            <!-- Address/City -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="@string/text_address_city_asterisk"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/gpt_edittext_bg">

                <ImageView
                    android:id="@+id/icon_address"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_home_location"
                    app:tint="@color/icon_grey" />

                <EditText
                    android:id="@+id/editTextPropertyAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/icon_address"
                    android:background="@drawable/gpt_edittext_bg"
                    android:hint="Enter property location"
                    android:inputType="textCapWords"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_500" />
            </RelativeLayout>


            <!-- Total Rooms + Shops -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Total Rooms -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="@string/text_total_rooms"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/gpt_edittext_bg"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgRoomsMinus"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_input_minus"
                            app:tint="?attr/colorOnBackground"/>

                        <TextView
                            android:id="@+id/textTotalRooms"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imgRoomsPlus"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_input_plus"
                            app:tint="?attr/colorOnBackground"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Total Shops -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="@string/text_total_shops"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/gpt_edittext_bg"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgShopsMinus"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_input_minus"
                            app:tint="?attr/colorOnBackground"/>

                        <TextView
                            android:id="@+id/textTotalShops"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/buttonPlus"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_input_plus"
                            app:tint="?attr/colorOnBackground"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <!-- Default Rent Amount -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="@string/text_default_rent"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/gpt_edittext_bg">

                <ImageView
                    android:id="@+id/icon_rent"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_rupee_symbol"
                    app:tint="@color/icon_grey" />

                <EditText
                    android:id="@+id/editTextDefaultRent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/icon_rent"
                    android:background="@drawable/gpt_edittext_bg"
                    android:hint="Enter rent amount"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_500" />
            </RelativeLayout>


            <!-- Electricity Unit Rate -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="@string/text_electricity_unit_rate"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/gpt_edittext_bg">

                <ImageView
                    android:id="@+id/icon_electricity"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_electric_bolt"
                    app:tint="@color/icon_grey" />

                <EditText
                    android:id="@+id/editTextUnitRate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/icon_electricity"
                    android:background="@drawable/gpt_edittext_bg"
                    android:hint="₹ per unit"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_500" />
            </RelativeLayout>

            <!-- Create Property Button -->
            <TextView
                android:id="@+id/btnCreateProperty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Property"
                android:paddingVertical="10dp"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/purple_500"
                android:background="@drawable/gpt_bg_chip"/>



        </LinearLayout>
    </LinearLayout>
</ScrollView>
