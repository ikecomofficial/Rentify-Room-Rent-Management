<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PropertyDetailsActivity">

    <!-- Top Background Section -->
    <LinearLayout
        android:id="@+id/propertyHeaderLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Property Name -->
        <TextView
            android:id="@+id/tvPropertyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_p_name_ast"
            android:textColor="@color/text_black"
            android:textSize="28sp"
            android:layout_marginBottom="6dp"
            android:textStyle="bold" />

        <!-- Location -->
        <TextView
            android:id="@+id/tvPropertyAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_p_address_ast"
            android:textSize="16sp"
            android:textColor="@color/text_sub_grey_600"
            app:drawableStartCompat="@drawable/ic_home_location"
            app:drawableTint="@color/teal_700"
            android:drawablePadding="4dp"/>

        <LinearLayout
            android:id="@+id/occupancyCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="16sp"
            android:weightSum="2"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/headerContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Left Card: Occupancy -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardOccupancy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/bg_occupancy_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_occupancy"
                        android:textSize="15sp"
                        android:textColor="#00796B"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvProgressLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_some_percentage"
                        android:textSize="14sp"
                        android:textColor="@color/text_sub_grey_600"
                        android:layout_marginTop="4dp" />

                    <ProgressBar
                        android:id="@+id/occupancyProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="6dp"
                        android:progress="75"
                        android:progressTint="@color/teal_700"
                        android:progressBackgroundTint="@color/icon_grey"
                        android:indeterminate="false" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Right Card: Month + Amount -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMonthAmount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/bg_occupancy_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_vertical|end">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Green Dot -->
                        <View
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginEnd="6dp"
                            android:backgroundTint="@color/green_700_status"
                            android:background="@drawable/ic_circle" />

                        <!-- Status Text -->
                        <TextView
                            android:id="@+id/tvOccupiedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_occ_vac_no"
                            android:textColor="@color/grey_700"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Green Dot -->
                        <View
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginEnd="6dp"
                            android:backgroundTint="@color/icon_grey"
                            android:background="@drawable/ic_circle" />

                        <!-- Status Text -->
                        <TextView
                            android:id="@+id/tvVacantCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_occ_vac_no"
                            android:textColor="@color/grey_700"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/tvRoomsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_rooms_shops_fixed"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:textColor="@color/black"
        android:paddingHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/propertyHeaderLayout" />


    <!-- RecyclerView below the header -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/roomsListRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvRoomsText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>