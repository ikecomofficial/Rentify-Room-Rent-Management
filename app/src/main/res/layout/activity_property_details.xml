<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PropertyDetailsActivity">

    <!-- Top Background Section -->
    <LinearLayout
        android:id="@+id/propertyHeaderLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Property Name -->
        <TextView
            android:id="@+id/tvPropertyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_property_name"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Rooms -->
        <LinearLayout
            android:id="@+id/layoutAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_home_location"
                android:layout_gravity="center_vertical"
                app:tint="@color/purple_500"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp"/>
            <!-- Location -->
            <TextView
                android:id="@+id/tvPropertyAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_address_city"
                android:textSize="16sp"
                android:textColor="@color/grey_700" />


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/occupancyCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:backgroundTint="#F1FAF9"
            android:layout_marginHorizontal="2dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:weightSum="10"
                android:gravity="center_vertical">

                <!-- Left Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Occupancy"
                        android:textSize="15sp"
                        android:textColor="#00796B"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvProgressLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="75%"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginTop="4dp" />

                    <ProgressBar
                        android:id="@+id/occupancyProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="6dp"
                        android:progress="75"
                        android:progressTint="@color/teal_700"
                        android:progressBackgroundTint="@color/icon_grey"
                        android:indeterminate="false" />
                </LinearLayout>

                <!-- Right Section -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="4"
                    android:gravity="end">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Green Dot -->
                        <View
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginEnd="6dp"
                            android:backgroundTint="@color/green_700_status"
                            android:background="@drawable/ic_circle" />

                        <!-- Status Text -->
                        <TextView
                            android:id="@+id/tvOccupiedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Occupied: 2"
                            android:textColor="@color/grey_700"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Green Dot -->
                        <View
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginEnd="6dp"
                            android:backgroundTint="@color/icon_grey"
                            android:background="@drawable/ic_circle" />

                        <!-- Status Text -->
                        <TextView
                            android:id="@+id/tvVacantCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vacant: 1"
                            android:textColor="@color/grey_700"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <!-- <View
        android:id="@+id/viewSeparatorLine"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/purple_700"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/propertyHeaderLayout"/> -->

    <TextView
        android:id="@+id/tvRoomsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rooms &amp; Shops"
        android:textSize="22dp"
        android:textStyle="bold"
        android:paddingTop="0dp"
        android:paddingBottom="8dp"
        android:textColor="@color/black"
        android:paddingStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/propertyHeaderLayout" />


    <!-- RecyclerView below the header -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/roomsListRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvRoomsText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>