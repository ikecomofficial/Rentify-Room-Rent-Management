<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/gpt_bg_property_card"
    android:paddingVertical="10dp"
    android:paddingHorizontal="18dp"
    android:elevation="2dp"
    android:layout_marginVertical="6dp">

    <!-- Top Row -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="2dp">

        <!-- Date -->
        <TextView
            android:id="@+id/tvBillDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03 Oct 2025, 05:47 PM"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <!-- Amount -->
        <TextView
            android:id="@+id/tvBillAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ â‚¹320"
            android:textColor="#48ad50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

        <!-- Cash pill -->
        <TextView
            android:id="@+id/tvBillPaymentMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash"
            android:textColor="@color/grey_700"
            android:textSize="13sp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:background="@drawable/gpt_bg_chip"
            android:layout_toStartOf="@id/tvBillAmount"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true" />

    </RelativeLayout>


    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginVertical="8dp" />

    <!-- Bottom Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Lightning Icon + Text -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_lightening"
                android:layout_marginEnd="6dp"
                app:tint="#e9b217" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Units Paid Till: "
                android:textColor="#808080"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvBillPaidTill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textColor="@color/teal_700"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </LinearLayout>

        <!-- Right Green Text -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_add_round_outlined"
                android:layout_marginEnd="4dp"
                app:tint="#10c356" />

            <TextView
                android:id="@+id/tvBillUsedUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40"
                android:textColor="#10c356"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="units"
                android:layout_marginStart="5dp"
                android:textColor="#808080"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
